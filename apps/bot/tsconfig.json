{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "types": ["node", "express", "node-telegram-bot-api"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}